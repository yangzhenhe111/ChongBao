<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/booking_backgound"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- 卡片式布局-->
        <androidx.cardview.widget.CardView
            app:cardCornerRadius="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="340dp"
                    android:layout_height="45dp">
                    <com.example.pet.my.RoundImageView
                        android:id="@+id/booking_headimg"
                        android:layout_marginLeft="8dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp" />
                    <TextView
                        android:id="@+id/booking_name"
                        android:layout_marginLeft="10dp"
                        android:textSize="13sp"
                        android:textColor="@color/gongqingtuan_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/booking_time"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:textSize="11sp"
                            android:textColor="@color/booking_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>

                </LinearLayout>
                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/booking_img"
                    android:layout_width="340dp"
                    android:layout_height="140dp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>


</LinearLayout>
