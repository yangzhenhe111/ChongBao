<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/Blue">

        <EditText
            android:layout_toLeftOf="@+id/btn_publish_articles"
            android:id="@+id/et_main_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:hint="请输入您想要搜索的内容:" />

        <Button
            android:id="@+id/btn_main_search"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/btn_publish_articles"
            android:background="@drawable/search" />

        <Button
            android:id="@+id/btn_publish_articles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="发布"
            android:textSize="18dp"
            android:background="@drawable/shape"
            android:layout_gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="18dp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_below="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="300dp">

                    <com.youth.banner.Banner
                        android:id="@+id/banner"
                        android:layout_width="match_parent"
                        android:layout_height="300dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <RelativeLayout

                            android:id="@+id/forum_food"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:id="@+id/food_img"
                                android:src="@drawable/food" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/food_img"
                                android:text="食品"
                                android:textSize="15sp"
                                android:gravity="center"
                                android:textColor="@color/Black" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_toRightOf="@+id/forum_food"
                            android:id="@+id/forum_articles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:id="@+id/articles_img"
                                android:src="@drawable/articles" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/articles_img"
                                android:text="用品"
                                android:textSize="15sp"
                                android:gravity="center"
                                android:textColor="@color/Black" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/forum_daily"
                            android:layout_toRightOf="@+id/forum_articles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:id="@+id/daily_img"
                                android:src="@drawable/daily" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/daily_img"
                                android:text="日常"
                                android:textSize="15sp"
                                android:gravity="center"
                                android:textColor="@color/Black" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/forum_cosmetology"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/forum_daily">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:id="@+id/cosmetology_img"
                                android:src="@drawable/cosmetology" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/cosmetology_img"
                                android:text="美容"
                                android:textSize="15sp"
                                android:gravity="center"
                                android:textColor="@color/Black" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_toRightOf="@+id/forum_cosmetology"
                            android:id="@+id/forum_train"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:layout_width="70dp"
                                android:layout_height="70dp"
                                android:id="@+id/train_img"
                                android:src="@drawable/train" />

                            <TextView
                                android:layout_width="70dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/train_img"
                                android:text="训练"
                                android:textSize="15sp"
                                android:gravity="center"
                                android:textColor="@color/Black" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">

                            <RelativeLayout
                                android:id="@+id/forum_deworming"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/deworming_img"
                                    android:src="@drawable/deworming" />

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/deworming_img"
                                    android:text="驱虫"
                                    android:textSize="15sp"
                                    android:gravity="center"
                                    android:textColor="@color/Black" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_toRightOf="@id/forum_deworming"
                                android:id="@+id/forum_disease"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/disease_img"
                                    android:src="@drawable/disease" />

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/disease_img"
                                    android:text="病症"
                                    android:textSize="15sp"
                                    android:gravity="center"
                                    android:textColor="@color/Black" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_toRightOf="@id/forum_disease"
                                android:id="@+id/forum_randomtalk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/randomtalk_img"
                                    android:src="@drawable/randomtalk" />

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/randomtalk_img"
                                    android:text="杂谈"
                                    android:textSize="15sp"
                                    android:gravity="center"
                                    android:textColor="@color/Black" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_toRightOf="@id/forum_randomtalk"
                                android:id="@+id/forum_question"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/question_img"
                                    android:src="@drawable/question" />

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/question_img"
                                    android:text="提问"
                                    android:textSize="15sp"
                                    android:gravity="center"
                                    android:textColor="@color/Black" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_toRightOf="@id/forum_question"
                                android:id="@+id/forum_sharephotos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_width="70dp"
                                    android:layout_height="70dp"
                                    android:id="@+id/sharephotos_img"
                                    android:src="@drawable/sharephotos" />

                                <TextView
                                    android:layout_width="70dp"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/sharephotos_img"
                                    android:text="晒图"
                                    android:textSize="15sp"
                                    android:gravity="center"
                                    android:textColor="@color/Black" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>

                <com.zhy.android.percent.support.PercentLinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.zhy.android.percent.support.PercentRelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/forum_newest"
                            android:layout_width="0dp"
                            app:layout_widthPercent="30%"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="最新"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:textColor="@color/Black"
                            android:background="@color/Blue"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/forum_hot"
                            android:layout_toRightOf="@id/forum_newest"
                            android:layout_width="0dp"
                            app:layout_widthPercent="30%"
                            android:layout_height="wrap_content"
                            android:text="热门"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:textColor="@color/Black"
                            android:layout_gravity="center" />

                        <TextView
                            android:id="@+id/forum_essence"
                            android:layout_toRightOf="@id/forum_hot"
                            android:layout_width="0dp"
                            app:layout_widthPercent="30%"
                            android:layout_height="wrap_content"
                            android:text="精华"
                            android:textSize="32sp"
                            android:gravity="center"
                            android:textColor="@color/Black"
                            android:layout_gravity="center" />
                    </com.zhy.android.percent.support.PercentRelativeLayout>

                    <com.example.pet.forum.MyListView
                        android:id="@+id/lv_tips"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </com.zhy.android.percent.support.PercentLinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>

