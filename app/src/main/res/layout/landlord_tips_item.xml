<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/landlord_tips_landlordhead"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@drawable/aaaaaa"
            android:layout_marginLeft="12dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/landlord_tips_landlordname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="楼主昵称"
                android:textSize="20sp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/landlord_tips_tipstime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发帖时间"
                android:textSize="16sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/landlord_tips_topic"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/shape"
            android:text="食品"
            android:textSize="20dp"
            android:textColor="@color/Blue"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="130dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/landlord_tips_totips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/landlord_tips_tipstitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="标题"
            android:textSize="24sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/landlord_tips_thumbnail"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
            <TextView
                android:id="@+id/landlord_tips_text"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="正文选段"
                android:textSize="16sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/landlord_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="32dp">
            <ImageView
                android:id="@+id/landlord_iv_like"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/like1"/>
            <TextView
                android:id="@+id/landlord_tv_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/landlord_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="64dp">
            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/comment"/>
            <TextView
                android:id="@+id/landlord_tv_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/landlord_forward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="64dp">
            <ImageView
                android:id="@+id/landlord_iv_forward"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/forward1"/>
            <TextView
                android:id="@+id/landlord_tv_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="20dp"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>